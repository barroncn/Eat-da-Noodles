<div class="container">
    <br><br>
    <div id="head">
        <img id="noodlesIcon" src="assets/images/noodles.png"></img>
        <br><br>
        <h1>Eat-Da-Noodles!</h1>
    </div>
    <br>
    <div class="clearfix" id="foodDiv">
        <div id="uneaten" class="float-left">
            <h4 class="title">Ready to Eat:</h4>
            <br>
            <ol>
                {{#each pasta}}
                    {{#unless devoured}}
                        <h4><li>{{pasta_name}} <span><button id="{{id}}" class="devourMe"><i class="fa fa-cutlery" aria-hidden="true"></i> Devour!</button></span></li></h4>
                    {{/unless}}
                {{/each}}
            </ol>
        </div>
        <div id="eaten" class="float-right">
            <h4 class="title">Finished Off:</h4>
            <br>
            <ol>
                {{#each pasta}}
                    {{#if devoured}}
                        <h4><li>{{pasta_name}}</li></h4>
                    {{/if}}
                {{/each}}
            </ol>
        </div>
    </div>
    <br>
    <div>
        <form class="input-group" action="/" method="POST">
          <input type="text" class="form-control" name="newNoodle">
          <span class="input-group-btn">
            <button class="btn btn-secondary" type="submit">Serve It Up!</button>
          </span>
        </form>
    </div>
    <br>
    <div>
        <p id="instructions">Enter a pasta dish you want to eat and serve it up!</p>
    </div>
</div>
<script>
    $(".devourMe").on("click", function(){
        console.log($(this).attr("id"));
        $.ajax("/", {
      type: "PUT",
      data: {id: parseInt($(this).attr("id"))}
    }).then(
      function() {
        console.log("Devoured!");
        // Reload the page to get the updated list
        location.reload();
      })
    });
    
</script>
